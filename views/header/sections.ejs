  <button
    id="getBonusSectionBtn"
    class="flex flex-col justify-center items-center border-[1px] rounded-md py-3"
  >
    <img src="./image/icon-4.png" class="w-6" alt="" />
    <span class="lg:text-base text-sm" id="getBonusSectionBtnText"
      >Cash Back</span
    >
  </button>

  <button
    id="payBillSectionBtn"
    class="flex flex-col justify-center items-center border-[1px] rounded-md py-3"
  >
    <img src="./image/icon-5.png" class="w-6" alt="" />
    <span class="lg:text-base text-sm" id="payBillSectionBtnText"
      >Pay Bill</span
    >
  </button>

  <button
    id="transactionHistorySectionBtn"
    class="flex flex-col justify-center items-center border-[1px] rounded-md py-3"
  >
    <img src="./image/icon-6.png" class="w-6" alt="" />
    <span class="lg:text-base text-sm" id="transactionHistorySectionBtnText"
      >Transactions</span
    >
  </button>
</section>
