<!-- grid card section  -->
<section class="grid grid-cols-3 gap-5 mt-5 lg:px-0 px-4">
  <button
    class="flex flex-col justify-center items-center border-[1px] rounded-md py-3 lg:text-base text-sm"
    id="addMoneySectionBtn"
  >
    <img src="./image/icon-1.png" class="w-6" alt="" />
    <span class="lg:text-base text-sm" id="addMoneySectionBtnText"
      >Cash In</span
    >
  </button>

  <button
    class="flex flex-col justify-center items-center border-[1px] rounded-md p-3"
    id="cashOutSectionBtn"
  >
    <img src="./image/icon-2.png" class="w-6" alt="" />
    <span class="lg:text-base text-sm" id="cashOutSectionBtnText"
      >Cash Out</span
    >
  </button>

  <button
    class="flex flex-col justify-center items-center border-[1px] rounded-md py-3"
    id="transferMoneySectionBtn"
  >
    <img src="./image/icon-3.png" class="w-6" alt="" />
    <span class="lg:text-base text-sm" id="transferMoneySectionBtnText"
      >Send Money</span
    >
    <!-- <span
      class="lg:text-base text-sm lg:block hidden"
      id="transferMoneySectionBtnText"
      >Transfer Money</span -->
